<mah:MetroWindow x:Class="ReadMangaApp.View.RateMangaPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadMangaApp.View"
        mc:Ignorable="d"
        Title=" " Height="250" Width="400" TitleBarHeight="30" NonActiveWindowTitleBrush="LightGray" 
        BorderBrush="Gray" WindowTitleBrush="Gray"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Image x:Key="StarImage" Source="pack://application:,,,/ReadMangaApp;component/Icons/star.png"/>
    </Window.Resources>
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" CornerRadius="5" Padding="35,15" Background="White" Grid.RowSpan="5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <Slider Maximum="10" Minimum="1" Value="{Binding CurrentScore, Mode=TwoWay}" Width="200"/>
                    <TextBlock Text="{Binding CurrentScore}" FontWeight="Bold" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Отменить" Width="100" Height="30" Command="{Binding CancelCommand}" Margin="0,0,10,0"/>
                    <Button Content="Оценить" Width="100" Height="30" Margin="0" Command="{Binding SubmitCommand}"/>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</mah:MetroWindow>
