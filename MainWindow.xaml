<mah:MetroWindow x:Class="ReadMangaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="ReadManga" Height="600" Width="1040" 
        TitleBarHeight="30" NonActiveWindowTitleBrush="LightGray" 
        BorderBrush="Gray" WindowTitleBrush="Gray"
        WindowStartupLocation="CenterScreen">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel VerticalAlignment="Center" Margin="10,10,5,10">
            <Button Content="Меню" HorizontalAlignment="Left" VerticalAlignment="Center" Command="{Binding ToggleMenuCommand}" Margin="0,0,10,0" FontSize="12"/>
            <Popup x:Name="MenuPopup" Placement="Bottom" StaysOpen="False" AllowsTransparency="True" MinWidth="250">
                <Border Background="#fff" BorderBrush="LightGray" BorderThickness="2" Padding="10">
                    <StackPanel>
                        <Button Content="Каталог" Command="{Binding OpenMangaWindowCommand}"/>
                        <Button Content="Профиль" Margin="0,5" Command="{Binding OpenProfileCommand}"/>
                        <Button Content="{Binding LoginButtonText}" Command="{Binding LoginOrLogoutCommand}" Background="LightGray"/>

                    </StackPanel>
                </Border>
            </Popup>
        </WrapPanel>
        <Frame x:Name="MainContent" Grid.Row="1" Margin="5" NavigationUIVisibility="Visible"></Frame>
    </Grid>
</mah:MetroWindow>
